@model IEnumerable<SoftServe.Demo2.Models.EmployeesModel.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Teams</h2>

<button onclick="location='@Url.Action("Create")'" style="margin-bottom:10px; margin-top: 10px">Create New</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </th>
        <th>
            Team members
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectName)
            </td>

            @{List<string> members = new List<string>();
            }
            @foreach (var teamMember in item.Employees)
            {
                members.Add(teamMember.Name);
            }
            @{string allMembers = string.Join(", ", members);
            }
            <td>
                @allMembers
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
